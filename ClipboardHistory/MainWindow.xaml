        Width="650"
        Height="520"
        MinWidth="500"
        MinHeight="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Visibility="Hidden"
        Deactivated="Window_Deactivated"
        KeyDown="Window_KeyDown"
        UseLayoutRounding="True"

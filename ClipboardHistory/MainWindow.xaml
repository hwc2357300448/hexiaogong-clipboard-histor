                                    </StackPanel>
                                    
                                    <!-- æ”¶è—æŒ‰é’® -->
                                    <Button Grid.Column="1"
                                           FontSize="18"
                                           Margin="8,0"
                                           Padding="4"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Cursor="Hand"
                                           VerticalAlignment="Center"
                                           Click="FavoriteIconButton_Click"
                                           ToolTip="{Binding IsFavorite, Converter={StaticResource FavoriteTooltipConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">

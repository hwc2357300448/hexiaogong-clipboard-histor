                                                    </MultiTrigger.Conditions>
                                                    <Setter TargetName="Border" Property="Background" Value="#357ABD"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#2E6DA4"/>
                                                </MultiTrigger>
                                            </ControlTemplate.Triggers>
